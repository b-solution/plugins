<%= error_messages_for @periodictask %>
<%= f.hidden_field :id %>
<div class="box tabular">
    <p><%= f.text_field :subject, :required => true, :size => 60 %></p>
    <p>
      <%= label(:periodictask, :assigned_to_user_id, "User") %>
      <% if @users.length > 0 %>
        <%= collection_select(:periodictask, "assigned_to_id", @users, :id, :name,
            {:include_blank=>"Select User..."}) %>
      <% else %>
        <%= l(:no_members_in_project) %>
      <% end %>
    </p>
    <p><%= f.text_field :interval_number, :required => true, :size => 3 %> </p>
    <p>
        <%= label(:periodictask, :interval_units, "Interval Unit") %>
        <%= select 'periodictask', 'interval_units', Periodictask::INTERVAL_UNITS %>
    </p>
    <P>
        <%= label(:periodictask, :tracker_id, "Tracker") %>
        <%= collection_select("periodictask", "tracker_id", @project.trackers, :id, :name ) %>
    </p>
    <P><%= f.text_field :next_run_date, :required => true %> 
</div>
